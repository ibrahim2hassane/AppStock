{% extends 'accueil.html.twig' %}

{% block title %} Gestion des Entree {% endblock %}

{% block body %} 
    <div class="container row">
        <div class="container col-md-6">
            <div class="card">
                <div class="card-header"> Liste des Achats </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <tr>
                                <th>Identifiant </th>
                                <th>Date</th>
                                <th>Quantite en achet√©</th>
                                <th>Produit</th>
                                <th>Prix</th>
                            </tr> 
                            {% for e in entrees %}
                                <tr> 
                                    <td>{{ e.id}} </td>
                                    <td>{{ e.date|date('d/m/y')}} </td>
                                    <td>{{ e.Qtite}} </td>
                                    <td>{{ e.Produit}} </td>
                                    <td>{{ e.Prix}} </td>

                                </tr>
                            {% endfor %}
                        </table>
                    </div>
            </div>
        </div>
            <div class="container col-md-6">
                    <div class="card ">
                        <div class="card-header"> Formulaire de Gestion des Achats </div>
                            <div class="card-body"> 
                                {{ form(form)}}
                            </div>
                    </div>
            </div> 
    </div>
{% endblock %}
